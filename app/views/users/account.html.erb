<h1 class="page-title">アカウント情報</h1>

<div class="account-card">
  <div class="account-row">
    <div class="account-label">名前</div>
    <div class="account-value"><%= @user&.name %></div>
  </div>

  <div class="account-row">
    <div class="account-label">メール</div>
    <div class="account-value"><%= @user&.email %></div>
  </div>

  <div class="account-row">
    <div class="account-label">年齢</div>
    <div class="account-value"><%= age_range(@user.age) %></div>
  </div>

  <div class="account-row">
    <div class="account-label">性別</div>
    <div class="account-value"><%= @user&.gender %></div>
  </div>

  <div class="account-row">
    <div class="account-label">居住地</div>
    <div class="account-value"><%= @user&.location %></div>
  </div>

  <div class="account-avatar">
    <% if @user&.icon&.attached? %>
      <%= image_tag @user.icon, class: "avatar-img" %>
    <% else %>
      <%= image_tag "default_user.png", class: "avatar-img" %>
    <% end %>
  </div>

  <% if current_user %>
    <div class="account-actions">
      <%= link_to "プロフィール編集", edit_user_path(current_user), class: "btn-primary" %>
    </div>
  <% end %>
</div>
