<h1 class="pickup-title">Pick up ラーメン</h1>

<div class="pickup-grid">
  <% @pickup_shops.each do |shop| %>
    <% photo = shop.menu_photos.first %>

    <div class="pickup-card">
      <%= link_to shop_path(shop), class: "pickup-link" do %>
        <div class="pickup-image">
          <% if photo.present? %>
            <%= image_tag photo %>
          <% else %>
            <div class="no-image">画像なし</div>
          <% end %>
        </div>

        <strong class="pickup-name"><%= shop.name %></strong><br>
        <small class="pickup-address">📍<%= shop.address %></small>
      <% end %>
    </div>
  <% end %>
</div>
<div class="home-two-cols">
  <section class="home-col">
    <h2 class="home-subtitle1">新着店舗</h2>
    <ul class="mini-list">
      <% @new_shops.each do |shop| %>
        <% photo = shop.menu_photos.first %>

        <li class="mini-item">
          <div class="mini-text">
            <%= link_to shop.name, shop_path(shop), class: "mini-name" %>
            <small class="mini-address">📍<%= shop.address %></small>
          </div>

          <div class="mini-thumb">
  <%= link_to shop_path(shop) do %>
    <% if photo.present? %>
      <%= image_tag photo %>
    <% else %>
      <div class="no-image">画像無し</div>
    <% end %>
  <% end %>
</div>
        </li>
    <% end %> 
    </ul>
  </section>
  <section class="home-col">
    <h3 class="home-subtitle2">口コミ新着店舗</h3>
    <ul class="mini-list">
      <% @recent_review_shops.each do |shop| %>
        <% photo = shop.menu_photos.first %>
        <li class="mini-item">
          <div class="mini-text">
            <%= link_to shop.name, shop_path(shop), class: "mini-name" %>
            <small class="mini-address">📍<%= shop.address %></small>
          </div>
          <div class="mini-thumb">
  <%= link_to shop_path(shop) do %>
    <% if photo.present? %>
      <%= image_tag photo %>
    <% else %>
      <div class="no-image">画像無し</div>
    <% end %>
  <% end %>
</div>
        </li>
      <% end %>
    </ul>
  </section>
</div>